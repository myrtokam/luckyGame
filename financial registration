            { "ID", ID }
        };


    //εκτυπωση

    FinancialRegistration.Add(userFinancialRegistry);

Console.WriteLine("\n Your registration is completed successfully.");

foreach (var user in userFinancialRegistry)
{
    Console.WriteLine($"First Name: {user["FirstName"]}, Last Name: {user["LastName"]}, 
