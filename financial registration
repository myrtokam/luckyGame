    //αποθηκευση στοιχειων σε λιστα

    var userFinancialRegistry = new Dictionary<string, object>
        {
            { "FirstName", FirstName },
            { "LastName", LastName },
            { "Age", int.Parse(AgeOfuser) },
            { "BirthDay", BirthDay },
