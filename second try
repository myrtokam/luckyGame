using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace KinoGame
{
    public class KinoGame
    {

        public static void numbersInput()
        {
            Console.WriteLine("Welcome at the LuckyNumbers Game...!!!");
            Console.WriteLine("Instructions:");
            Console.WriteLine("You can choose 10 numbers between 1 and 100 for the standard lottery draw.");
            Console.WriteLine("After choosing your numbers, choose another two numbers between 1 to 50 for the bonus lottery draw.");

            Console.WriteLine(" ");


            Console.WriteLine("Give the numbers of your choice for the standard lottery draw:");


            List<int> classicLottery = new List<int>();

            for (int i = 0; i <= 9; i++)
            {
                int userInputClassic = Convert.ToInt32(Console.ReadLine());

                if (classicLottery.Contains(userInputClassic))
                {
                    Console.WriteLine("The number that you gave already exists. Please give another number between 1 and 100.");
                    i--; // Decrease i to repeat the loop for the current index
                }
                else
                {
                    classicLottery.Add(userInputClassic);
                }
                if (userInputClassic > 0 && userInputClassic <= 100)
                {
                    classicLottery.Add(userInputClassic);

                }
                else if (userInputClassic >= 101)
                {

                    Console.WriteLine("give a number through 0 to 100.");
                    i--;
                }




            }
            Console.WriteLine("");
            Console.WriteLine("the numbers you choose are:");


           
        }




            public static void BonusLottery()
        {
            Console.WriteLine(" ");
            Console.WriteLine("Give the numbers of your choice for the bonus lottery draw:");
            List<int> BonusLottery = new List<int>();
            for (int i = 0; i < 2; i++)
            {
                int userInputBonus = Convert.ToInt32(Console.ReadLine());
                if (userInputBonus > 0 && userInputBonus < 50)
                {
                    BonusLottery.Add(userInputBonus);
                    Console.WriteLine("Thank you for your input");
                }
                Console.WriteLine("Give a number through 1 to 50.");
                i--;

            }
        }


    
        static void Main(string[] args)
        {



          

            numbersInput();
            BonusLottery();


          //  Console.WriteLine("to many not valid trys. Press any key to exit.");
            Console.ReadKey();

        }

    }
}

